<script>
function insertChar(char, inputId) {
            const input = document.getElementById(inputId);
            input.value += char;
        }

    const correctAnswers = {
        q1: ["Qué", "qué"],
        q2: ["Es música y baile dominicano"],
        q3: ["Cuáles", "cuáles"],
        q4: ["Son La Caleta y Bolonia"],
        q5: ["Cuáles", "cuáles"],
        q6: ["Son tabaco, ron y café"],
        q7: ["Qué", "qué"],
        q8: ["Es música y baile español"],
        q9: ["Cuál", "cuál"],
        q10: ["Es El Salvador"],
        q11: ["Cuál", "cuál"],
        q12: ["Es El Amazonas"],
        
    };

    function checkAnswers() {
        let correctCount = 0;
        const totalCount = Object.keys(correctAnswers).length;

        for (const [key, value] of Object.entries(correctAnswers)) {
            const userAnswer = document.getElementById(key).value.trim();
            const inputElement = document.getElementById(key);

            inputElement.classList.remove('correct', 'incorrect');

            if (value.includes(userAnswer)) {
                inputElement.classList.add('correct');
                correctCount++;
            } else {
                inputElement.classList.add('incorrect');
            }
        }

        Swal.fire({
            icon: correctCount === totalCount ? 'success' : 'info',
            title: correctCount === totalCount ? '¡Perfecto!' : 'Resultado',
            text: `Tienes ${correctCount} respuestas correctas de ${totalCount}.`,
        });
    }

    function showInfo() {
        Swal.fire({
            title: '',
            html: `
             <h4 style="Font-size:23px">¡Ojo!</h4>
         <hr  class="pi">
                <p><strong>¿Qué?</strong>: Se utiliza para preguntar por cosas en general.</p>
                
                <hr  class="pi">
                
                <p><strong>¿Cuál?</strong>: Se usa para preguntar por una opción específica entre varias.</p>
                
                <hr  class="pi">
                
                <p><strong>¿Cuáles?</strong>: Similar a "cuál", pero en plural.</p>
                
                <hr  class="pi">
            `,
            icon: '',
            confirmButtonText: 'Cerrar'
        });
    }



    function generatePDF() {
  const { jsPDF } = window.jspdf;
  const doc = new jsPDF();

  // Tamaño de las imágenes
  const imgWidth = 13;
  const imgHeight = 13;
  const imgWidth1 = 50;
  const imgHeight1 = 13;

  // URLs de las imágenes
  const img1 = 'https://i.ibb.co/QXxjgxw/1726831132477.png'; // Primera imagen
  const img2 = 'https://i.ibb.co/b6pNgYh/1726831178715.png'; // Segunda imagen

  // Añadir el nombre del editor en la parte superior izquierda
  doc.setFontSize(12);
  doc.setFont('helvetica', 'bold');
  doc.text("Prof.: Faouzi ElHilali", 150, 17); // Posición (10,20) a la izquierda de las imágenes
  doc.text("Nivel: A1", 150, 22); // Posición (10,20) a la izquierda de las imágenes

  // Añadir la primera imagen (superior izquierda)
  doc.addImage(img1, 'PNG', 10, 10, imgWidth, imgHeight); // (x, y, width, height)

  // Añadir la segunda imagen justo después de la primera
  doc.addImage(img2, 'PNG', 10 + imgWidth + 0, 10, imgWidth1, imgHeight1); // Añadir 10 de espacio entre las imágenes

// Añadir la línea justo debajo de las imágenes
doc.setLineWidth(0.5); // Grosor de la línea
doc.setDrawColor(150); // Color gris elegante
doc.line(10, 10 + imgHeight + 10, 200, 10 + imgHeight + 10); // Línea justo debajo de la imagen (ajusta según tu diseño)


  // Añadir el nombre del documento centrado debajo de las imágenes
  doc.setFontSize(16);
  doc.setFont('helvetica', 'bold');
  doc.text(" Qué, cuál o cuáles", 105, 60, { align: 'center' });
  

  // Recoger los valores de los cuadros de texto y asignar "------" si están vacíos
  const q1 = document.getElementById("q1").value.trim() || "------";
  const q2 = document.getElementById("q2").value.trim() || "------";
  const q3 = document.getElementById("q3").value.trim() || "------";
  const q4 = document.getElementById("q4").value.trim() || "------";
  const q5 = document.getElementById("q5").value.trim() || "------";
  const q6 = document.getElementById("q6").value.trim() || "------";
  const q7 = document.getElementById("q7").value.trim() || "------";
  const q8 = document.getElementById("q8").value.trim() || "------";
  const q9 = document.getElementById("q9").value.trim() || "------";
  const q10 = document.getElementById("q10").value.trim() || "------";
  const q11 = document.getElementById("q11").value.trim() || "------";
  const q12 = document.getElementById("q12").value.trim() || "------";
 

  // Crear la tabla con autoTable
  doc.autoTable({
    head: [['', '', 'Tabla de contenido']],
    body: [
      ['1. ¿', q1, ' es la bachata?'],
      [{ content: `> ${q2}`, colSpan: 3, styles: { halign: 'left' } }],
      ['2. ¿', q3, ' son las playas más famosas de Cádiz?'],
      [{ content:  `> ${q4}`, colSpan: 3, styles: { halign: 'left' } }],
      ['3. ¿', q5, ' son los productos más típicos de Cuba?'],
      [{ content:  `> ${q6}`, colSpan: 3, styles: { halign: 'left' } }],
      ['4. ¿', q7, ' es el flamenco?'],
      [{ content:  `> ${q8}`, colSpan: 3, styles: { halign: 'left' } }],
      ['5. ¿', q9, ' es el país más pequeño de América central?'],
      [{ content:  `> ${q9}`, colSpan: 3, styles: { halign: 'left' } }],
      ['6. ¿', q11, ' ese río más largo de América del Sur?'],
      [{ content:  `> ${q12}`, colSpan: 3, styles: { halign: 'left' } }],
      
    ],
    theme: 'grid',
    styles: {
      halign: 'left',
      fontSize: 12,
      fillColor: [245, 245, 245],
    },
    headStyles: {
      fillColor: [52, 152, 219],
      textColor: [255, 255, 255],
      fontStyle: 'bold',
      halign: 'left',
    },
    bodyStyles: {
      fillColor: [255, 255, 255],
      textColor: [0, 0, 0],
    },
    alternateRowStyles: {
      fillColor: [240, 240, 240],
    },
    columnStyles: {
      0: { cellWidth: 15, halign: 'right' },
      1: { cellWidth: 20 },
      2: { cellWidth: 'auto' },
    },
    didParseCell: function(data) {
      if (data.column.index === 1) {
        data.cell.styles.textColor = [0, 0, 255];
      }
    },
    margin: { top: 70 }, // Mover la tabla hacia abajo para dar espacio a las imágenes y el texto
  });

  // Descargar el PDF
  doc.save("preguntas_sobre_bolivia.pdf");
}

    

    document.querySelectorAll('input[type="text"]').forEach(input => {
        input.addEventListener('input', function() {
            input.classList.remove('incorrect');
        });
    });
</script>

